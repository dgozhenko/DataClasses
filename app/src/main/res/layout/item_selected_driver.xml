<androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/driverContainer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

  <TextView
      android:id="@+id/driverName"
      style="?attr/textAppearanceBody1"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:maxLines="1"
      android:textAlignment="center"
      android:textStyle="bold"
      app:layout_constraintBottom_toTopOf="@+id/driverNationality"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/driverNumber"
      android:layout_margin="8dp"
      tools:text="Sebastian Vettel" />

  <TextView
      android:id="@+id/driverNationality"
      style="?attr/textAppearanceCaption"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:maxLines="1"
      android:textAlignment="center"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/driverName"
      tools:text="German" />

  <TextView
      android:id="@+id/driverNumber"
      style="?attr/textAppearanceHeadline1"
      android:layout_width="32dp"
      android:layout_height="32dp"
      android:textAlignment="center"
      android:textSize="28sp"
      android:textStyle="italic"
      app:layout_constraintBottom_toTopOf="@+id/driverName"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:text="5" />

</androidx.constraintlayout.widget.ConstraintLayout>